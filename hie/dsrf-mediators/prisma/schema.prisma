generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CaseIdTracker {
  id           Int    @id @default(autoincrement())
  countryCode  String
  subCountyCode String
  lastCaseId   Int    @default(0)

  @@unique([countryCode, subCountyCode]) // enforce uniqueness of combination
}
